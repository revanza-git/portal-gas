@{
    Layout = "~/Views/Shared/Panel.cshtml";
    var startDate = (DateTime)ViewData["StartDate"];
    var endDate = (DateTime)ViewData["EndDate"];
    var target_pasokan = (Int32)ViewData["target_pasokan"];
    var realisasi_pasokan = (Int32)ViewData["realisasi_pasokan"];
    var target_bog = (Int32)ViewData["target_bog"];
    var realisasi_bog = (Decimal)ViewData["realisasi_bog"];
    var prosentase_bog = target_bog == 0 ? 0 : Math.Round((decimal)(100 * realisasi_bog / target_bog));
    var prosentase_pasokan = target_pasokan == 0 ? 0 : Math.Round((decimal)(realisasi_pasokan * 100 / target_pasokan));
    var target_penjualan = (Int32)ViewData["target_penjualan"];
    var realisasi_penjualan = (Decimal)ViewData["realisasi_penjualan"];
    var prosentase_penjualan = target_penjualan == 0 ? 0 : Math.Round((decimal)(realisasi_penjualan * 100 / target_penjualan));
    var jsonPasokan = Html.Raw(ViewData["jsonPasokan"]);
    var jsonPenjualan = Html.Raw(ViewData["jsonPenjualan"]);
}

@section PageLevelPlugin {
    <link rel="stylesheet" href="~/admin/vendor/amcharts_3.21.12/amcharts/plugins/export/export.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-daterangepicker/daterangepicker-bs3.css" />
    <link rel="stylesheet" href="~/admin/css/dashboard-enhancements.css" />
    <link rel="stylesheet" href="~/admin/css/responsive-enhancements.css" />
    <style>
        #chartdiv, #chartdiv2, #chartdiv11, #chartdiv12 {
            width: 100%;
            height: 350px;
        }

        #chartdiv3, #chartdiv4 {
            width: 100%;
            height: 500px;
        }
        
        .dashboard-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }
        
        .dashboard-title {
            font-size: 2.5em;
            font-weight: 700;
            margin: 0;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }
        
        .dashboard-subtitle {
            font-size: 1.2em;
            opacity: 0.9;
            margin-top: 5px;
        }
    </style>
}

@section TitleBar {
    <strong>🏭 Gas Monitoring - Management Dashboard</strong>
}

<!-- main area -->
<div class="main-content">
    <div class="panel">
        <div class="panel-heading border">
            <ol class="breadcrumb mb0 no-padding">
                <li>
                    <a href="javascript:;"><i class="fa fa-home"></i> Dashboard</a>
                </li>
                <li>
                    <a href="javascript:;"><i class="fa fa-tachometer"></i> Gas Monitoring</a>
                </li>
                <li class="active"><strong><i class="fa fa-chart-line"></i> Management Dashboard</strong></li>
            </ol>
        </div>
        <div class="panel-body">
            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">
                    <i class="fa fa-lg fa-check-circle"></i> 
                    <span class="loading-spinner" style="display: none;"></span>
                    @TempData["message"]
                </div>
            }

            <!-- Dashboard Header -->
            <div class="dashboard-header">
                <div class="row">
                    <div class="col-md-8">
                        <h1 class="dashboard-title">⚡ Gas Monitoring Dashboard</h1>
                        <p class="dashboard-subtitle">Real-time monitoring and analytics for gas operations</p>
                    </div>
                    <div class="col-md-4 text-right">
                        <div class="year-selector-container" style="background: rgba(255,255,255,0.1); margin: 0;">
                            <label style="color: white;">📅 Year:</label>
                            <select onchange="updateDashboards(this.value)" style="background: rgba(255,255,255,0.2);">
                                @for (Int32 year = DateTime.Now.Year; year >= 2012; year--)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Key Performance Indicators -->
            <div class="row">
                <div class="col-md-6">
                    <section class="widget bg-success text-center bold">
                        <div class="widget-details col-xs-6">
                            <h2 class="no-margin pulse" id="rkap">
                                <b>
                                    <i class="fa fa-target" style="margin-right: 10px;"></i>
                                    <label id="target_pasokan">@target_pasokan</label> 
                                    <small style="font-size: 0.4em;">Kargo</small>
                                </b>
                            </h2>
                            <small class="text-uppercase" style="font-size:15px;"><b>🎯 TARGET PASOKAN</b></small>
                        </div>
                        <div class="widget-details col-xs-6">
                            <h2 class="no-margin" id="realisasi">
                                <b>
                                    <i class="fa fa-check-circle" style="margin-right: 10px;"></i>
                                    <label id="realisasi_pasokan">@realisasi_pasokan.ToString("N0")</label> 
                                    <small style="font-size: 0.4em;">Kargo</small>
                                </b>
                            </h2>
                            <small class="text-uppercase" style="font-size:15px;"><b>✅ REALISASI</b></small>
                        </div>
                    </section>
                </div>
                <div class="col-md-6">
                    <section class="widget bg-warning text-center bold">
                        <div class="widget-details col-xs-6">
                            <h2 class="no-margin" id="rkap">
                                <b>
                                    <i class="fa fa-bullseye" style="margin-right: 10px;"></i>
                                    <label id="target_penjualan">@target_penjualan.ToString("N0")</label> 
                                    <small style="font-size: 0.4em;">MMBTU</small>
                                </b>
                            </h2>
                            <small class="text-uppercase" style="font-size:15px;"><b>🎯 TARGET PENJUALAN</b></small>
                        </div>
                        <div class="widget-details col-xs-6">
                            <h2 class="no-margin" id="realisasi">
                                <b>
                                    <i class="fa fa-chart-line" style="margin-right: 10px;"></i>
                                    <label id="realisasi_penjualan">@realisasi_penjualan.ToString("N0")</label> 
                                    <small style="font-size: 0.4em;">MMBTU</small>
                                </b>
                            </h2>
                            <small class="text-uppercase" style="font-size:15px;"><b>📈 REALISASI</b></small>
                        </div>
                    </section>
                </div>
            </div>

            <!-- Performance Gauges -->
            <div class="row">
                <div class="col-md-6">
                    <div class="chart-container">
                        <div class="chart-title">
                            <i class="fa fa-tachometer"></i> Performance Pasokan (@prosentase_pasokan%)
                        </div>
                        <div id="chartdiv"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="chart-container">
                        <div class="chart-title">
                            <i class="fa fa-chart-pie"></i> Performance Penjualan (@prosentase_penjualan%)
                        </div>
                        <div id="chartdiv2"></div>
                    </div>
                </div>
            </div>

            <!-- BOG Monitoring -->
            <div class="row">
                <div class="col-md-12">
                    <div class="widget bog-widget">
                        <div class="widget-icon bg-white pull-left fa fa-tachometer">
                        </div>
                        <div class="overflow-hidden">
                            <span class="widget-title">
                                <i class="fa fa-fire"></i> 
                                @realisasi_bog.ToString("N0") of @target_bog.ToString("N0") M³/D  
                                ( @prosentase_bog.ToString("N0")% )
                            </span>
                            <span class="widget-subtitle">🔥 Boil of Gas Monitoring</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Date Range Filter -->
            <div class="row">
                <div class="col-md-4">
                    <div class="date-range-container">
                        <label><i class="fa fa-calendar"></i> Period Selection:</label>
                        <div class="input-prepend input-group">
                            <span class="add-on input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" name="daterange" class="form-control drp" 
                                   value="@startDate.ToString("dd/MM/yyyy") - @endDate.ToString("dd/MM/yyyy")" 
                                   onchange="updateGraphs(this.value)" 
                                   placeholder="Select date range..." />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Trend Charts -->
            <div class="row">
                <div class="col-md-12">
                    <div class="chart-container">
                        <div class="chart-title">
                            <i class="fa fa-line-chart"></i> Trend Analysis - Target vs Realisasi Pasokan
                        </div>
                        <div id="chartdiv3"></div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="chart-container">
                        <div class="chart-title">
                            <i class="fa fa-area-chart"></i> Trend Analysis - Target vs Realisasi Penjualan
                        </div>
                        <div id="chartdiv4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden inputs for JavaScript -->
<input type="hidden" id="prosentase_pasokan" value="@prosentase_pasokan"/>
<input type="hidden" id="prosentase_penjualan" value="@prosentase_penjualan" />

@section PageLevelScripts {
    <!-- Resources -->
    <script src="~/admin/vendor/amcharts_3.21.12/amcharts/amcharts.js"></script>
    <script src="~/admin/vendor/amcharts_3.21.12/amcharts/serial.js"></script>
    <script src="~/admin/vendor/amcharts_3.21.12/amcharts/gauge.js"></script>
    <script src="~/admin/vendor/amcharts_3.21.12/amcharts/themes/light.js"></script>
    <script src="~/admin/vendor/amcharts_3.21.12/amcharts/plugins/export/export.min.js"></script>
    <script src="~/admin/vendor/moment/moment.js"></script>
    <script src="~/admin/vendor/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/admin/scripts/dashboard-enhancements.js"></script>
}

@section InitPageScripts {
    <script>
        $('.drp').daterangepicker({
            format: 'DD/MM/YYYY',
            startDate: '@startDate.ToString("dd/MM/yyyy")',
            endDate: '@endDate.ToString("dd/MM/yyyy")'
        });

        var chart = AmCharts.makeChart("chartdiv", {
            "fontSize": "7",
            "theme": "light",
            "type": "gauge",
            "axes": [{
                "topText": @prosentase_pasokan + " %",
                "topTextFontSize": 20,
                "topTextYOffset": 70,
                "axisColor": "#31d6ea",
                "axisThickness": 1,
                "endValue": 100,
                "gridInside": true,
                "inside": true,
                "radius": "50%",
                "valueInterval": 10,
                "tickColor": "#67b7dc",
                "startAngle": -90,
                "endAngle": 90,
                "unit": "%",
                "bandOutlineAlpha": 0,
                "bands": [{
                    "color": "#0080ff",
                    "endValue": 100,
                    "innerRadius": "105%",
                    "radius": "170%",
                    "gradientRatio": [0.5, 0, -0.5],
                    "startValue": 0
                }, {
                    "color": "#3cd3a3",
                    "endValue": @prosentase_pasokan,
                    "innerRadius": "105%",
                    "radius": "170%",
                    "gradientRatio": [0.5, 0, -0.5],
                    "startValue": 0
                }]
            }],
            "arrows": [{
                "alpha": 1,
                "innerRadius": "35%",
                "nailRadius": 0,
                "radius": "170%",
                "value": @prosentase_pasokan
            }]
        });

        var chart2 = AmCharts.makeChart("chartdiv2", {
            "fontSize": "7",
            "theme": "light",
            "type": "gauge",
            "axes": [{
                "topText": @prosentase_penjualan + " %",
                "topTextFontSize": 20,
                "topTextYOffset": 70,
                "axisColor": "#31d6ea",
                "axisThickness": 1,
                "endValue": 100,
                "gridInside": true,
                "inside": true,
                "radius": "50%",
                "valueInterval": 10,
                "tickColor": "#67b7dc",
                "startAngle": -90,
                "endAngle": 90,
                "unit": "%",
                "bandOutlineAlpha": 0,
                "bands": [{
                    "color": "#0080ff",
                    "endValue": 100,
                    "innerRadius": "105%",
                    "radius": "170%",
                    "gradientRatio": [0.5, 0, -0.5],
                    "startValue": 0
                }, {
                    "color": "#3cd3a3",
                    "endValue": @prosentase_penjualan,
                    "innerRadius": "105%",
                    "radius": "170%",
                    "gradientRatio": [0.5, 0, -0.5],
                    "startValue": 0
                }]
            }],
            "arrows": [{
                "alpha": 1,
                "innerRadius": "35%",
                "nailRadius": 0,
                "radius": "170%",
                "value": @prosentase_penjualan
            }]
        });

        var chart11 = AmCharts.makeChart("chartdiv11", {
            "fontSize": "7",
            "theme": "light",
            "type": "gauge",
            "axes": [{
                "topText": @prosentase_penjualan + " %",
                "topTextFontSize": 20,
                "topTextYOffset": 70,
                "axisColor": "#31d6ea",
                "axisThickness": 1,
                "endValue": 100,
                "gridInside": true,
                "inside": true,
                "radius": "50%",
                "valueInterval": 10,
                "tickColor": "#67b7dc",
                "startAngle": -90,
                "endAngle": 90,
                "unit": "%",
                "bandOutlineAlpha": 0,
                "bands": [{
                    "color": "#0080ff",
                    "endValue": 100,
                    "innerRadius": "105%",
                    "radius": "170%",
                    "gradientRatio": [0.5, 0, -0.5],
                    "startValue": 0
                }, {
                    "color": "#3cd3a3",
                    "endValue": @prosentase_penjualan,
                    "innerRadius": "105%",
                    "radius": "170%",
                    "gradientRatio": [0.5, 0, -0.5],
                    "startValue": 0
                }]
            }],
            "arrows": [{
                "alpha": 1,
                "innerRadius": "35%",
                "nailRadius": 0,
                "radius": "170%",
                "value": @prosentase_penjualan
            }]
        });

        var chart3 = AmCharts.makeChart("chartdiv3", {
            "theme": "light",
            "type": "serial",
            "titles": [{
                "text": "Trend Target Pasokan vs Realisasi"
            }],
            "startDuration": 2,
            "dataProvider": @jsonPasokan,
            "valueAxes": [{
                "position": "left",
                "title": "Target Pasokan vs Realisasi (BBTU)"
            }],
            "graphs": [{
                "balloonText": "Target [[category]]: <b>[[value]]</b>",
                "fillColors": "#FF0F00",
                "fillAlphas": 1,
                "lineAlpha": 0.1,
                "type": "column",
                "valueField": "target"
            }, {
                "balloonText": "Realisasi [[category]]: <b>[[value]]</b>",
                "fillColors": "#04D215",
                "fillAlphas": 1,
                "lineAlpha": 0.1,
                "type": "column",
                "valueField": "realisasi"
            }],
            "depth3D": 20,
            "angle": 30,
            "chartCursor": {
                "categoryBalloonEnabled": false,
                "cursorAlpha": 0,
                "zoomable": false
            },
            "categoryField": "date",
            "categoryAxis": {
                "gridPosition": "start",
                "labelRotation": 90
            },
            "export": {
                "enabled": true
            }
        });

        var chart4 = AmCharts.makeChart("chartdiv4", {
            "theme": "light",
            "type": "serial",
            "startDuration": 2,
            "titles": [{
                "text": "Trend Target Penjualan vs Realisasi"
            }],
            "dataProvider": @jsonPenjualan,
            "valueAxes": [{
                "position": "left",
                "title": "Target Penjualan vs Realisasi (BBTU)"
            }],
            "graphs": [{
                "balloonText": "Target [[category]]: <b>[[value]]</b>",
                "fillAlphas": 1,
                "lineAlpha": 0.1,
                "type": "column",
                "valueField": "target"
            }, {
                "balloonText": "Realisasi [[category]]: <b>[[value]]</b>",
                "fillAlphas": 1,
                "lineAlpha": 0.1,
                "type": "column",
                "valueField": "realisasi"
            }],
            "depth3D": 20,
            "angle": 30,
            "chartCursor": {
                "categoryBalloonEnabled": false,
                "cursorAlpha": 0,
                "zoomable": false
            },
            "categoryField": "date",
            "categoryAxis": {
                "gridPosition": "start",
                "labelRotation": 90
            },
            "export": {
                "enabled": true
            }
        });

        function updateGraphs(rd) {
            dates = rd.split("-");
            start = dates[0].trim();
            end = dates[1].trim();
            sd = start.split("/");
            ed = end.split("/");
            startDate = sd[2] + "-" + sd[1] + "-" + sd[0];
            endDate = ed[2] + "-" + ed[1] + "-" + ed[0];
            getPasokanPeriod(startDate, endDate, function (result) {
                chart3.dataProvider = result;
                chart3.validateData();
            });

            getPenjualanByPeriod(startDate, endDate, function (result) {
                chart4.dataProvider = result;
                chart4.validateData();
            });
        }

        function getPasokanByPeriod(startDate, endDate, handleData) {
            $.ajax({
                url: "getPasokanByPeriod",
                method: "GET",
                data: {
                    "startDate": startDate,
                    "endDate": endDate
                },
                dataType: "json",
                success: function (result) {
                    handleData(result);
                }
            });
        }

        function getPenjualanByPeriod(startDate, endDate, handleData) {
            $.ajax({
                url: "getPenjualanByPeriod",
                method: "GET",
                data: {
                    "startDate": startDate,
                    "endDate": endDate
                },
                dataType: "json",
                success: function (result) {
                    handleData(result);
                }
            });
        }


        function updateDashboards(tahun) {
            getDashboardData(tahun, function (result) {
                chart.arrows[0].setValue(result.prosentase_pasokan);
                chart.axes[0].setTopText(result.prosentase_pasokan + " %");
                chart.axes[0].bands[1].setEndValue(result.prosentase_pasokan);

                chart2.arrows[0].setValue(result.prosentase_penjualan);
                chart2.axes[0].setTopText(result.prosentase_penjualan + " %");
                chart2.axes[0].bands[1].setEndValue(result.prosentase_penjualan);

                $("#target_pasokan").html(result.target_pasokan);
                $("#realisasi_pasokan").html(result.realisasi_pasokan);
                $("#target_penjualan").html(result.target_penjualan.toLocaleString("id-ID"));
                $("#realisasi_penjualan").html(result.realisasi_penjualan.toLocaleString("id-ID"));
            });
        }

        function getDashboardData(tahun, handleData) {
            $.ajax({
                url: "getDashboardData",
                method: "GET",
                data: {
                    "tahun": tahun,
                },
                dataType: "json",
                success: function (result) {
                    handleData(result);
                }
            });
        }

</script>

}
