                grid-template-columns: 1fr;
            }

            .gallery-slider {
                height: 250px;
            }

            .gallery-slide img {
                height: 250px;
                object-fit: contain;
                background: #cffafe;
            }
        }
    </style>
}

<!-- main area -->
<div class="main-content">

    <!-- Gallery Section (Moved to Top) -->
    <div class="media-section slide-up">
        <h3 class="section-title">📸 Gallery Terbaru</h3>
        
        @if (ViewBag.photos != null && ((IEnumerable<Photo>)ViewBag.photos).Any())
        {
            var photosList = ((IEnumerable<Photo>)ViewBag.photos).ToList();
            <div class="gallery-slider">
                <div class="gallery-slides">
                    @foreach (var item in photosList)
                    {
                        <div class="gallery-slide">
                            <img src="@Url.Action("GetFileContent", "Gallery", new { ID = item.PhotoID })" alt="@item.Keterangan">
                            <div class="gallery-caption">
                                <h4>@item.Keterangan</h4>
                            </div>
                        </div>
                    }
                </div>
                <button class="gallery-nav prev">&lt;</button>
                <button class="gallery-nav next">&gt;</button>
                <div class="gallery-dots">
                    @for (int i = 0; i < photosList.Count; i++)
                    {
                        <span class="gallery-dot @(i == 0 ? "active" : "")"></span>
                    }
                </div>
            </div>
        }
        else
        {
            <div style="text-align:center; padding:2rem; color:#0891b2;">
                <i class="fa fa-image fa-3x" style="margin-bottom:1rem; opacity:0.5;"></i>
                <h4>Belum ada foto tersedia</h4>
                @if (ViewBag.photos == null)
                {
                    <p style="color: #dc3545; font-size: 14px;">
                        <i class="fa fa-exclamation-triangle"></i> 
                        Database connection issue - please contact administrator
                    </p>
                }
                else
                {
                    <p style="color: #0891b2; font-size: 14px;">
                        Silakan upload foto melalui menu Gallery
                    </p>
                }
            </div>
        }
    </div>

    <!-- Video Section (Moved above Filter) -->
    <div class="media-section slide-up">
        <h3 class="section-title">🎥 Video Terbaru</h3>
        @if (ViewBag.video != null)
        {
            <div style="text-align:center;">
                <video style="width:100%; max-height:300px; border-radius:0.75rem;" controls>
                    <source type="@GalleryHelper.GetContentType(ViewBag.video.FileName)" src="@Url.Action("GetVideoContent", "Gallery", new { ID = ViewBag.video.VideoID })" alt="@ViewBag.video.Keterangan">
                </video>
                <div style="padding:1rem; text-align:center;">
                    <label style="font-weight:500; color:#1e293b;">@ViewBag.video.Keterangan</label>
                </div>
            </div>
        }
        else
        {
            <div style="text-align:center; padding:2rem; color:#0891b2;">
                <i class="fa fa-video-camera fa-3x" style="margin-bottom:1rem; opacity:0.5;"></i>
                <p>Belum ada video tersedia</p>
            </div>
        }
    </div>

    <!-- Date Filter -->
    <div class="date-filter fade-in">
        <h3 class="chart-title">📅 Filter Periode Data</h3>
        <form method="get">
            <div class="form-group">
                <div class="input-prepend input-group" style="max-width: 300px; margin: 0 auto;">
                    <span class="add-on input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" name="daterange" class="form-control drp" value="@ViewBag.startdate - @ViewBag.enddate" onchange="this.form.submit()" />
                </div>
            </div>
        </form>
    </div>

    <!-- Charts Section -->
    <div class="content-grid">
        <div class="chart-container slide-up">
            <h3 class="chart-title">📊 Accident Triangle</h3>
            <div id="chartdiv"></div>
        </div>
        
        <div class="chart-container slide-up">
            <h3 class="chart-title">👥 Top NOC Contributors</h3>
            <div id="chartdiv2"></div>
        </div>
    </div>
</div>
<!-- /main area -->

