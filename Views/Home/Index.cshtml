        #chartdiv {
            max-width: 450px;
            width: 100%;
            height: 320px;
            margin: 1rem auto;
        }
        
        #chartdiv2 {
            max-width: 450px;
            width: 100%;
            height: 280px;
            margin: 1rem auto;
        }
        
